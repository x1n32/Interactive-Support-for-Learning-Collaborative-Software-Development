        if (checkbox6 == True):
            changeline = line.replace("- [ ] Using all the functions", "- [x] Using all the functions")
            newFile = newFile + changeline + "\n"

    else:
        newFile = newFile + line + "\n"
    
file.close()

#Write to file 
fout = open("Task1.md", "w")
fout.write(newFile)
fout.close()

