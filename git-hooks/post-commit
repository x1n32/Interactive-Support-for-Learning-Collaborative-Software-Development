#!/usr/bin/env python

import sys

print ("Starting commit-msg hook")

# opening the file in read mode
file = open("calculator1Report.md", "r")
newFileReplacement = ""
scoreFind = "You have passed"
string1 = "Main Tasks:"

scoreIndex = 1
index = 1


#using the for loop
for line in file:
    line = line.strip()

    if string1 in line:
      break;
    index += 1
file.close()

file = open("calculator1Report.md", "r")
for line in file:
    line = line.strip()

    if scoreFind in line:
        score = line[-17];
        break;
    scoreIndex += 1
print(index)
print(scoreIndex , "The number found: " , score)
file.close()
# opening the file in write mode

#fout = open("calculator1Report.md", "w")
#fout.write(newFileReplacement)
#fout.close()


sys.exit(0) #0 indicates success
